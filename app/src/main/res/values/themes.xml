        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.FarmSales.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.FarmSales.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>