<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FarmSales" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">#303030</item>
        <item name="colorOnPrimary">@color/nature_green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#202020</item>
        <item name="colorSecondaryVariant">#B0B0B0</item>
        <item name="colorOnSecondary">@color/nature_green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#C5C5C5</item>
        <!-- Customize your theme here. -->

        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/postivebuttonstyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/negativebuttonstyle</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="postivebuttonstyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/com_facebook_blue</item>
    </style>

    <style name="negativebuttonstyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/com_facebook_blue</item>
    </style>

